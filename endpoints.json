{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api"
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },

  "GET /api/articles/:article_id": {
    "description": "returns individual article",
    "parameters": ["article_id"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },

  "GET /api/articles/:article_id/comments": {
    "description": "returns comments for a specific article",
    "parameters": ["article_id"],
    "exampleResponse": {
      "comments": [
        {
          "article_id": 1,
          "comment_id": 2,
          "votes": 2,
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z"
        }
      ]
    }
  },

  "GET /api/users": {
    "description": "returns comments for a specific article",
    "queries": [],
    "exampleResponse": {
      "users": [
        {
          "username": "Burgers88",
          "name": "Matt",
          "avatar_url": "..."
        }
      ]
    }
  },

  "POST /api/articles/:article_id/comments": {
    "description": "posts a comment on a specific article",
    "parameters": ["article_id"],
    "exampleResponse": {
      "comments": [
        {
          "author": "Burgers88",
          "body": "Hello",
          "article_id": 1,
          "votes": 2,
          "comment_id": 2,
          "created_at": "2020-04-05"
        }
      ]
    }
  },

  "PATCH /api/articles/:article_id": {
    "description": "updates votes on an article",
    "parameters": ["article_id"],
    "exampleResponse": {
      "updateVotes": [
        {
          "inc_votes": 100
        }
      ]
    }
  },

  "DELETE /api/articles/:article_id": {
    "description": "deletes a specified article",
    "parameters": ["article_id"],
    "exampleResponse": {}
  },

  "GET /api/users/:username": {
    "description": "returns specified user",
    "parameters": ["username"],
    "exampleResponse": {
      "specifiedUser": [
        {
          "username": "Burgers88",
          "name": "Matt",
          "avatar_url": "..."
        }
      ]
    }
  },

  "PATCH /api/comments/:comment_id": {
    "description": "updates votes",
    "parameters": ["comment_id"],
    "exampleRequest": {
      "updateVotes": [
        {
          "inc_votes": 100
        }
      ]
    },
    "exampleResponse": {
      "specifiedUser": [
        {
        "comment_id": 14,
        "body": "Replacing the quiet elegance of the dark suit and tie with...",
        "votes": 105,
        "author": "someName",
        "article_id": 1,
        "created_at": 1583025180000
        }
      ]
    }
  },



  "POST /api/articles": {
    "description": "post new article and return it with comment count",
    "queries": [],
    "exampleRequest": {
      "newArticle": [
        {
          "author": "icellusedkars",
          "title": "I love laptops",
          "body": "That's all i wanted to say",
          "topic": "mitch"
        }
      ]
    },
    "exampleResponse": {
      "postedArticle": [
        {
          "author": "icellusedkars",
          "title": "I love laptops",
          "body": "That's all i wanted to say",
          "topic": "mitch",
          "article_img_url":  "https://images.pexels.com/photos/97050/pexels-photo-97050.jpeg?w=700&h=700",
          "votes": 0,
          "article_id": 14,
          "created_at": "2018-05-30T15:59:13.341Z",
          "comment_count": 0
        }
      ]
    }
  },


  "POST /api/topics": {
    "description": "posts new topic and returns it",
    "queries": [],
    "exampleRequest": {
      "newTopic": [
        {
          "slug": "fruits",
          "description": "Everyone needs their five a day"
        }
      ]
    },
    "exampleResponse": {
      "postedArticle": [
        {
          "slug": "fruits",
          "description": "Everyone needs their five a day"
        }
      ]
    }
  }
}




